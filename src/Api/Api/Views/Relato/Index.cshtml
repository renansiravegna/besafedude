@model IList<Api.Models.Dominio.Relato>

<table class="table table-condensed">
    <thead>
        <tr style="background-color: #337ab7 !important">
            <th class="text-center">Tipo de relato</th>
            <th>Periodo</th>
            <th>Descrição</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr class="@item.TipoDeRelato">
            <td class="text-center">@item.TipoDeRelato</td>
            <td>@item.Data.ToShortDateString()</td>
            <td class="col-md-10">@item.Descricao</td>
        </tr>
    }
    </tbody>
</table>

<style>
    .Acidente {
        background-color: #f0ad4e;
    }
    .Roubo {
        background-color: #5bc0de;
    }
    .Incendio {
        background-color: #d9534f;
    }
</style>